.d-block
	display block

.d-inline
	display inline

.d-inline-block
	display inline-block

.f-right
	float right

.f-left
	float left

.relative
	position relative

.absolute
	position absolute

.fixed
	position fixed

.static
	position static

.stikcy
	position sticky

.radius-half
	border-radius 50px

.radius-full
	border-radius 100px

for rd in (1..100)
	.radius-{rd}
		border-radius rd px
	
for tl in (1..100)
	.radius-tl-{tl}
		border-top-left-radius tl px

for tr in (1..100)
	.radius-tr-{tr}
		border-top-right-radius tr px
		
for bl in (1..100)
	.radius-bl-{bl}
		border-bottom-left-radius bl px

for br in (1..100)
	.radius-br-{br}
		border-bottom-right-radius br px