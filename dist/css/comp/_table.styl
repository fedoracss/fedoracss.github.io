table
	background #ffffff
	thead
		border-bottom 2px solid #E0E0E0
	tbody
		tr
			border-bottom 1px solid #E0E0E0
	tr
		th, td
			padding 8px

table.bordered
	border 1px solid #E0E0E0

table.stripped
	thead
		background #f9f9F9
	tbody
		tr:nth-child(even)
			background #f9f9F9

table.bordered-all
	border 1px solid #E0E0E0
	tr
		th, td
			border 1px solid #E0E0E0

table.borderless
	border none
	tr
		border none
		th, td
			border none
	thead
		border none