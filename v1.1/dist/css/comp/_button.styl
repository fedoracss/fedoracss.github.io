.btn
	background transparent
	color #2c3e50
	font-size 1rem
	padding 8px 12px
	border-radius 3px
	border 1px solid #ecf0f1
	font-family inherit
	text-align center
	text-decoration none
	font-weight normal
	display inline-block
	cursor pointer
	margin-right 8px
	margin-bottom 8px
	&:hover
		background transparent
		border 1px solid #bdc3c7
		text-decoration none
	&:active
		background transparent
		border 1px solid #95a5a6

.btn.primary
	background #3498db
	border 1px solid #3498db
	color #ffffff
	&:hover
		background #2283c3
		border 1px solid #2283c3
	&:active
		background #1f74ad
		border 1px solid #1f74ad

.btn.success
	background #2ecc71
	border 1px solid #2ecc71
	color #ffffff
	&:hover
		background #26a65b
		border 1px solid #26a65b
	&:active
		background #219150
		border 1px solid #219150

.btn.warning
	background #f1c40f
	border 1px solid #f1c40f
	color #333333
	&:hover
		background #f39c12
		border 1px solid #f39c12
	&:active
		background #f1c40f
		border 1px solid #f1c40f

.btn.danger
	background #e74c3c
	border 1px solid #e74c3c
	color #ffffff
	&:hover
		background #e3301c
		border 1px solid #e3301c
	&:active
		background #cc2b19
		border 1px solid #cc2b19
		
.btn.outline
	background transparent

.btn.outline.primary
	color #3498db
	&:hover
		color #ffffff
		background #3498db
		border 1px solid #3498db
	&:active
		background #2283c3
		border 1px solid #2283c3

.btn.outline.success
	color #2ecc71
	&:hover
		background #2ecc71
		border 1px solid #2ecc71
		color #ffffff
	&:active
		background #26a65b
		border 1px solid #26a65b

.btn.outline.warning
	color #f1c40f
	&:hover
		background #f1c40f
		border 1px solid #f1c40f
		color #333333
	&:active
		background #f39c12
		border 1px solid #f39c12

.btn.outline.danger
	color #e74c3c
	&:hover
		background #e74c3c
		border 1px solid #e74c3c
		color #ffffff
	&:active
		background #e3301c
		border 1px solid #e3301c


.btn.lg
	font-size 1.275rem
	padding .625rem 1rem

.btn.sm
	font-size .875rem
	padding 0.25rem 0.5rem

.btn.block
	display block

.btn.full-width
	width 100%
	display block