code.code
	background #272822
	width auto
	display block
	border-radius 4px
	padding 12px 16px
	color #ffffff
	font-family monospace
	font-size 1rem
	word-break break-all
	position relative
	overflow hidden

code.code.block
	width 100%
	display block
	margin-bottom 16px

code.code:after
code.code:before
	content ''
	clear both
		
code
	background #ecf0f1
	border-radius 2px
	font-size 0.9rem
	padding 1px 6px
	color #2c3e50