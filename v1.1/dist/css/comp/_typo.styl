for h in (1..6)
	h{h}
		margin 0
		padding 0
		margin 16px 0
	
.bold
	font-weight bold

.italic
	font-style italic

.underline
	text-decoration underline

.overline
	text-decoration overline

.line-through
	text-decoration line-through

.decor-none
	text-decoration none

.align-left
	text-align left

.align-center
	text-align center

.align-right
	text-align right 

.justify
	text-align justify

.upper
	text-transform uppercase

.lower
	text-transform lowercase

.capital
	text-transform capitalize

.rtl
	direction rtl